                                        <label class="lbSwatch" for="swatch-1-@item.Key">
                                            @item.Key
                                            <img alt="sold-out" class="crossed-out" src="//theme.hstatic.net/1000253775/1000571612/14/soldout.png?v=370">
                                            <img alt="select-pro" class="img-check" src="//theme.hstatic.net/1000253775/1000571612/14/select-pro.png?v=370">
