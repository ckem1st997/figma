                <div class="header">SIZE</div>
                <div class="select-swap">
                    @{
                        if (Model.ProductSizeColors.Where(a => a.ProductID == Model.Product.ProductID) != null)
                            @foreach (var item in Model.ProductSizeColors.Where(a => a.ProductID == Model.Product.ProductID).GroupBy(a => a.Size.SizeProduct))
