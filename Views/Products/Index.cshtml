@model IEnumerable<figma.Models.Products>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    int i = 1;
}

@{
    if (TempData["result"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            Message: @TempData["result"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
}


<h1>Danh sách sản phẩm</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Thêm mới sản phẩm</a>
</p>
<table class="table text-center">
    <thead>
        <tr>
            <th>
                Stt
            </th>
            <th style="width:15%">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th style="width:10%">
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateBy)
            </th>
            <th>
                Chức năng
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @i
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @{
                        string[] arrListStr = item.Image.Split(',');
                    }
                    <img class="" src="/@arrListStr[0]" />
                </td>
                <td>
                    @{
                        if (item.Active)
                        {
                            <span class="btn btn-success">Đang bán</span>
                        }
                        else
                        {
                            <span class="btn btn-danger">Chưa bán</span>
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateBy)
                </td>
                <td>
                    <a class="btn btn-success mb-2" asp-action="Details" asp-route-id="@item.ProductID">Thông tin</a>
                    <br />
                    <a class="btn btn-primary mb-2" asp-action="Edit" asp-route-id="@item.ProductID">Chỉnh sửa</a>
                    <br />
                    <a class="btn btn-warning mb-2" asp-action="IndexSC" asp-route-idsp="@item.ProductID">Size, Color</a>
                    <br />
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ProductID">Xóa</a>

                </td>
            </tr>
            <p class="d-none"> @(i++)</p>
        }
    </tbody>
</table>
