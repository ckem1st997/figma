@model IEnumerable<figma.Models.ConfigSites>

@{
    foreach (var item in Model)
    {
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-xl-3  col-lg-6 col-md-6 col-sm-6 col-12 info-lucas">
                        <h4>
                            @if (item.CoverImage != null)
                            {
                                <img src="~/@item.CoverImage" />
                            }
                            else
                            {
                                <img src="~/image/logo lucas-01 1.png" />
                            }
                        </h4>

                        <div class="info-fanpage mb-4 text-white">
                            Enjoy shopping with us:<br />

                            <a class="text-white" href="@item.GoogleAnalytics">
                                <i class="fas fa-long-arrow-alt-right border border-primary bg-primary mr-1 mt-4"></i>
                                @{
                                    if (item.Youtube != null)
                                    {
                                        <label> INSTAGRAM: @item.Youtube</label>
                                    }
                                    else
                                    {
                                        <label>INSTAGRAM: Lucas58.official</label>
                                    }
                                }
                                <br />
                            </a>
                            <a class="text-white" href="@item.LiveChat">
                                <i class="fas fa-long-arrow-alt-right border border-primary bg-primary mr-1 mt-4"></i>
                                @{
                                    if (item.nameShopee != null)
                                    {
                                        <label>
                                            SHOPEE:  @item.nameShopee
                                        </label>
                                    }
                                    else
                                    {
                                        <label>SHOPEE: Lucas58𝐋𝐮𝐜𝐚𝐬𝟓𝟖</label>
                                    }
                                }

                                <br />
                            </a>
                            <a class="text-white" href="@item.urlWeb">

                                <i class="fas fa-long-arrow-alt-right border border-primary bg-primary mr-1 mt-4"></i> ️

                                @{
                                    if (item.urlWeb != null)
                                    {
                                        <label>
                                            SHOPEE:  @item.urlWeb
                                        </label>
                                    }
                                    else
                                    {
                                        <label>WEB: Lucas58.com.vn</label>
                                    }
                                }  <br />
                            </a>
                        </div>
                        <div class="info-icon">
                            <a href="@item.Linkedin"><i class="fab fa-facebook-f"></i></a>
                            <a href="@item.Twitter"> <i class="fab fa-twitter"></i></a>
                            <a href="@item.GooglePlus"><i class="fab fa-google-plus-g"></i></a>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 col-12 info-lucas">
                        <h4 class="text-white">
                            LIÊN HỆ
                        </h4>
                        <div class="info-fanpage container mt-4 text-white">
                            <div class="row">
                                <div class="col-1">
                                    <i class="fas fa-home">
                                    </i>
                                </div>
                                <div class="col-9 content-main-fanpage">
                                    @{
                                        if (item.ContactInfo != null)
                                        {
                                            @Html.Raw(item.ContactInfo)
                                        }
                                        else
                                        {
                                            <div>📍 168 Nguyễn Thái Học, Ba Đình, Hà Nội ( Bến Xe Kim Mã )</div>
                                            <div>📍 96 Bùi Thị Xuân, Hai Bà Trưng, Hà Nội</div>
                                            <div> 📍 177 Cầu Giấy, Cầu Giấy, Hà Nội (Bưu Điện Cầu Giấy )</div>
                                        }
                                    }

                                </div>
                            </div>
                        </div>
                        <div class="icon icon-phone-number text-white">
                            <i class="fas fa-phone-volume"></i>
                            <span>

                                @if (item.Hotline != null)
                                {
                                    <label>Hotline: @item.Hotline</label>
                                }
                                else
                                {
                                    <label>Hotline: 0989999999</label>
                                }
                            </span>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 col-12 info-lucas">
                        <h4 class="text-white">
                            LINKS NHANH
                        </h4>
                        <div class="info-fanpage mt-4 ">
                            <ul class="list-group">
                                <li>
                                    <a asp-action="Index" class="text-white">
                                        Trang chủ
                                    </a>
                                </li>
                                <li>
                                    <a asp-action="Index" class="text-white">
                                        Sản phẩm
                                    </a>
                                </li>
                                <li>
                                    <a asp-action="Index" class="text-white">
                                        Blog
                                    </a>
                                </li>
                                <li>
                                    <a asp-action="Index" class="text-white">
                                        Liên hệ
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 col-12 info-lucas">
                        <h4 class="text-white">
                            FACEBOOK FANPAGE
                        </h4>
                        <div class="embed-responsive embed-responsive-16by9">
                            @Html.Raw(item.FbMessage)
                            @*<iframe src="https://www.facebook.com/plugins/page.php?href=https%3A%2F%2Fwww.facebook.com%2Fgiaitri24h24p24s%2F&tabs&width=340&height=214&small_header=false&adapt_container_width=true&hide_cover=false&show_facepile=true" width="340" height="214" style="border: none; overflow: hidden" scrolling="no" frameborder="0" allowTransparency="true"></iframe>*@
                        </div>
                        @await Html.PartialAsync("_SelectLanguagePartial")
                    </div>
                </div>
            </div>
        </footer>
    }
}

