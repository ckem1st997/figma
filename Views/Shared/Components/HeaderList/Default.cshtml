@model figma.ViewModel.HeaderViewModel

<header>
    <div class="info">
        <div class="container-fluid">
            <div class="row">
                @{
                    @foreach (var item in Model.ConfigSites)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-4 col-12 info-lucas hotline">

                            @if (item.Hotline != null)
                            {
                                <label>Hotline: @item.Hotline</label>
                            }
                            else
                            {
                                <label>Hotline: 0989999999</label>
                            }
                        </div>
                        <div class="col-lg-5 col-md-8 col-sm-8 col-12 info-lucas ship title-header text-right">
                            Freeship cho tất cả các đơn hàng giá trị trên 1.000.000 đ
                        </div>
                        <div class="col-lg-4 col-md-6 col-sm-6 col-12 info-lucas linkFanpage d-none d-lg-block">
                            <div class="container-fluid">
                                <div class="row">
                                    <a class="col-4 title-header" href="@item.Linkedin">
                                        Facebook
                                    </a>
                                    <a class="col-4 title-header" href="@item.Twitter">
                                        Twitter
                                    </a>
                                    <a class="col-4 title-header" href="@item.GoogleAnalytics">
                                        Instagram
                                    </a>
                                </div>
                            </div>

                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <nav class=" shift menu-scroll navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand d-none d-lg-block" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/image/store_1556894301_675 1.png" />
            </a>
            <button href="#menu-hide" class="btn-show-mobile d-block d-lg-none" type="button">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="" id="menu-hide">
                <div id="nav">
                    <nav class="main-nav text-center">
                        <ul class="clearfix">
                            <li>
                                <a asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="Home" asp-action="Privacy">Sale</a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="Home" asp-action="Privacy">Sản phẩm <i class="fa fa-chevron-down" aria-hidden="true"></i></a>

                                <ul class="sub_menu">

                                    @foreach (var item in Model.ProductCategories.Where(a => a.ParentId == null))
                                    {
                                        <li>
                                            <a class="" href="/about/history/" title="@item.Name">
                                                @item.Name
                                                @if (Model.ProductCategories.Any(a => a.ParentId == item.ProductCategorieID))
                                                {
                                                    <i class="fa fa-chevron-right" aria-hidden="true"></i>
                                                }
                                            </a>
                                            @if (Model.ProductCategories.Any(a => a.ParentId == item.ProductCategorieID))
                                            {
                                                <ul class="sub_menu">
                                                    @foreach (var children in Model.ProductCategories.Where(a => a.ParentId == item.ProductCategorieID))
                                                    {
                                                        <li>
                                                            <a class="" href="/about/history/">@children.Name</a>
                                                        </li>
                                                    }
                                                </ul>
                                            }
                                        </li>
                                    }
                                </ul>
                            </li>
                            <li>
                                <a class="" asp-area="" asp-controller="Home" asp-action="Review">Blog</a>
                            </li>
                            <li>
                                <a class="" asp-area="" asp-controller="Home" asp-action="Privacy">Liên hệ</a>
                            </li>
                            <li>
                                <a class=" " asp-area="" asp-controller="Home" asp-action="Privacy">Tuyển dụng</a>
                            </li>
                            <li>
                                <a class="" asp-area="" asp-controller="Home" asp-action="Privacy">Bộ sưu tập</a>
                            </li>
                        </ul>
                    </nav>
                </div>              
            </div>
            <div class="icon-header">
                <div class="d-flex">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-search" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z" />
                        <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z" />
                    </svg>
                    <a asp-action="Account" class="" style="color:black">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-people" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M15 14s1 0 1-1-1-4-5-4-5 3-5 4 1 1 1 1h8zm-7.995-.944v-.002.002zM7.022 13h7.956a.274.274 0 0 0 .014-.002l.008-.002c-.002-.264-.167-1.03-.76-1.72C13.688 10.629 12.718 10 11 10c-1.717 0-2.687.63-3.24 1.276-.593.69-.759 1.457-.76 1.72a1.05 1.05 0 0 0 .022.004zm7.973.056v-.002.002zM11 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0zM6.936 9.28a5.88 5.88 0 0 0-1.23-.247A7.35 7.35 0 0 0 5 9c-4 0-5 3-5 4 0 .667.333 1 1 1h4.216A2.238 2.238 0 0 1 5 13c0-1.01.377-2.042 1.09-2.904.243-.294.526-.569.846-.816zM4.92 10c-1.668.02-2.615.64-3.16 1.276C1.163 11.97 1 12.739 1 13h3c0-1.045.323-2.086.92-3zM1.5 5.5a3 3 0 1 1 6 0 3 3 0 0 1-6 0zm3-2a2 2 0 1 0 0 4 2 2 0 0 0 0-4z" />
                        </svg>
                    </a>

                    <i class="far fa-heart"></i>
                    <a class="cart-count" asp-action="Logout">

                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cart4" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l.5 2H5V5H3.14zM6 5v2h2V5H6zm3 0v2h2V5H9zm3 0v2h1.36l.5-2H12zm1.11 3H12v2h.61l.5-2zM11 8H9v2h2V8zM8 8H6v2h2V8zM5 8H3.89l.5 2H5V8zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z">

                            </path>

                        </svg>
                        <div class="text-center text-white bg-danger pb-2">12</div>
                    </a>
                </div>
            </div>
        </div>
    </nav>
</header>
<script src="~/mmenu-light-master/dist/mmenu-light.js"></script>
