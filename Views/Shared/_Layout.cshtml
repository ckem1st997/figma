<!DOCTYPE html>
<html lang="en">
<head xmlns="http://www.w3.org/1999/xhtml" prefix="og:http://ogp.me/ns# fb:http://www.facebook.com/2008/fbml">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Html.Raw(ViewData["Title"])</title>
    <meta name="description" content="@Html.Raw(ViewData["Description"])" />
    <meta name="keywords" content="@ViewBag.Keywords" />
    <meta name="robots" content="index,follow" />
    <link rel="shortcut icon" href="~/image/logo.png">
    <meta property="og:locale" content="vi_VN">
    <meta property="og:type" content="website">
    <meta property="og:title" content="@ViewData["Title"]">
    <meta property="og:description" content="@Html.Raw(ViewData["Description"])">
    <meta property="og:site_name" content="@ViewData["Title"]">
    <meta property="og:image" content="@ViewBag.ImagShare" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.0.0/animate.min.css" />
    <link href="~/css/style.css" rel="stylesheet" asp-append-version="true"/>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,300;0,400;0,500;1,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam:ital,wght@0,500;0,600;1,500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/fontawesome-pro-5.0.13/css/all.css">
    <link rel="stylesheet" href="~/vegas/vegas.css">
    <link href="~/mmenu-light-master/dist/mmenu-light.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/slick-1.8.1/slick/slick.css">
    @*<link rel="stylesheet" href="~/slick-1.8.1/slick/slick-theme.css">*@
    <link rel="stylesheet" href="~/WOW-master/css/libs/animate.css" asp-append-version="true">
</head>
<body>
    <div>
        @await Component.InvokeAsync("HeaderList")
    </div>

    <div>
        @await Component.InvokeAsync("Phone")
    </div>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div>
        @await Component.InvokeAsync("FooterList")
    </div>

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="~/vegas/vegas.js"></script>
    <script type="text/javascript" src="~/slick-1.8.1/slick/slick.js" charset="utf-8"></script>
    <script type="text/javascript" src="~/WOW-master/dist/wow.min.js" charset="utf-8"></script>
    <script src="~/less.js-master/dist/less.js" data-poll="1000" data-relative-urls="false"></script>
    <script type="text/javascript" src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
