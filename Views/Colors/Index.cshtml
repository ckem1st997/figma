<h1>TinyMCE Quick Start Guide</h1>
<form method="post">
    <textarea id="mytextarea" name="mytextarea">
      Hello, World!
    </textarea>
</form>

<script>
    tinymce.init({
      selector: 'textarea',
      plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
      toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
      toolbar_mode: 'floating',
      tinycomments_mode: 'embedded',
      tinycomments_author: 'Author name',
    });
</script>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameColor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameColor)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ColorID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ColorID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ColorID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
