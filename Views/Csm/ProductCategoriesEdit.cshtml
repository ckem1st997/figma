@model figma.Models.ProductCategories

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<h4>ProductCategories</h4>
<hr />


<form asp-controller="Products" asp-action="createImage" enctype="multipart/form-data" onchange="AJAXSubmitCreateOne(this,100,100);return false;" method="post">
    <div class="form-group bg-white font-weight-bold">

        <div class="section-image-title d-flex justify-content-between">
            <p class="text-danger mt-3 mb-1">Biểu tượng</p>
            <div class="m-3 ml-1">
                <a class="">
                    <input id="filesadd" accept="image/*" name="filesadd" type="file" />
                </a>
                <script>
                </script>
            </div>
        </div>
        <div class="section-image-list add-image-0 container">
            <div class="row">
                @{
                    if (Model.Image != null)
                    {
                        string[] arrListStr = Model.Image.Split(',');
                        for (int i = 0; i < arrListStr.Length; i++)
                        {
                            <div class="col-3 mb-3 position-relative">
                                <a data-image="@arrListStr[i]" data-fancybox="gallery" class="@arrListStr[i]" href="/@arrListStr[i]">
                                    <img style="max-width:100%" class="" src="/@arrListStr[i]" />
                                    <span class="show--image-edit">Xem ảnh</span>
                                    <i class="far fa-eye show--image-edit i--one"></i>
                                </a>
                                <i class="fas fa-trash"></i>
                            </div>
                        }
                    }
                }
            </div>
        </div>
    </div>
</form>


