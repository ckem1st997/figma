@model figma.Models.Products

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Thêm sản phẩm mới</h1>


@{
    if (TempData["result"] != null)
    {
        <h3>Message: @TempData["result"]</h3>
    }
}

<hr />


<form asp-controller="Products" asp-action="createImage" enctype="multipart/form-data" onchange="AJAXSubmitCreate(this);return false;" method="post">
    <div class="form-group bg-white font-weight-bold">
        <div class="section-image-title d-flex justify-content-between">
            <p class="text-danger mt-3 mb-1">Ảnh sản phẩm</p>
            <span asp-validation-for="Image" class="text-danger"></span>

            <div class="m-3 ml-1">
                <a class="">
                    <input id="filesadd" accept="image/*" name="filesadd" type="file" multiple />
                </a>
                <script>
                </script>
            </div>
        </div>
        <div class="section-image-list insert-one container">
            <div class="row">
            </div>
        </div>
    </div>
</form>



<form asp-action="ProductsCreate" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-6">
                <div class="form-group ">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group d-none">
                    <label asp-for="Image"></label>
                    <input asp-for="Image" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProductCategorieID" class="control-label"></label>
                    <select asp-for="ProductCategorieID" class="form-control" asp-items="ViewBag.ProductCategorieID">
                    </select>
                    <span asp-validation-for="ProductCategorieID" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Factory" class="control-label"></label>
                    <input asp-for="Factory" class="form-control" />
                    <span asp-validation-for="Factory" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SaleOff" class="control-label"></label>
                    <input asp-for="SaleOff" class="form-control" />
                    <span asp-validation-for="SaleOff" class="text-danger"></span>
                </div>
                <div class="form-group d-none">
                    <label asp-for="CreateBy" class="control-label"></label>
                    <input asp-for="CreateBy" class="form-control" />
                    <span asp-validation-for="CreateBy" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Home" /> @Html.DisplayNameFor(model => model.Home)
                    </label>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="Sort" class="control-label"></label>
                    <input asp-for="Sort" class="form-control" />
                    <span asp-validation-for="Sort" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TitleMeta" class="control-label"></label>
                    <input asp-for="TitleMeta" class="form-control" />
                    <span asp-validation-for="TitleMeta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CollectionID" class="control-label"></label>
                    <select asp-for="CollectionID" class="form-control" asp-items="ViewBag.CollectionID">
                    </select>
                    <span asp-validation-for="CollectionID" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="DescriptionMeta" class="control-label"></label>
                    <input asp-for="DescriptionMeta" class="form-control" />
                    <span asp-validation-for="DescriptionMeta" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BarCode" class="control-label"></label>
                    <input asp-for="BarCode" class="form-control" />
                    <span asp-validation-for="BarCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QuyCach" class="control-label"></label>
                    <input asp-for="QuyCach" class="form-control" />
                    <span asp-validation-for="QuyCach" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Hot" /> @Html.DisplayNameFor(model => model.Hot)
                    </label>
                    <span asp-validation-for="Hot" class="text-danger"></span>

                </div>

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Active" /> Hiển thị lên Web
                    </label>
                    <span asp-validation-for="Active" class="text-danger"></span>

                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="StatusProduct" />Còn hàng
                    </label>
                    <span asp-validation-for="StatusProduct" class="text-danger"></span>

                </div>
            </div>
        </div>
    </div>



    <div class="form-group bg-white">
        <label asp-for="Body" class="control-label"></label>
        <div id="toolbar-container"></div>
        <div id="editor" class="bg-white"></div>

        <input type="hidden" asp-for="Body" class="form-control" />
        <script>
            var h = '' + $("#Body").val() + '';

        </script>
        <span asp-validation-for="Body" class="text-danger"></span>
    </div>
    <div class="form-group bg-white">
        <label asp-for="Content" class="control-label"></label>
        <div id="toolbar-containerContent"></div>
        <div id="editorContent"></div>
        <input type="hidden" asp-for="Content" class="form-control" />
        <script>
            var j = '' + $("#Content").val() + '';

        </script>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group bg-white">
        <label asp-for="GiftInfo" class="control-label"></label>
        <div id="toolbar-containerGift"></div>
        <div id="editorGift"></div>
        <input type="hidden" asp-for="GiftInfo" class="form-control" />
        <script>
            var t = '' + $("#GiftInfo").val() + '';

        </script>
        <span asp-validation-for="GiftInfo" class="text-danger"></span>
    </div>

    <div class="form-group text-center">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

