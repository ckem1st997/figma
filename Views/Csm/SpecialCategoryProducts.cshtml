@model figma.Models.TagProducts

@{
    ViewData["Title"] = "SpecialCategoryProducts";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>SpecialCategoryProducts</h1>
@{
    if (TempData["result"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            Message: @TempData["result"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
}
<h4>TagProducts</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SpecialCategoryProducts">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TagID" class="control-label"></label>
                <select asp-for="TagID" class="form-control" asp-items="ViewBag.TagID"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProductID" class="control-label"></label>
                <select asp-for="ProductID" class="form-control" asp-items="ViewBag.ProductID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
Danh sách
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tags)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Tp)
        {
            <tr>
                <td>
                    @item.Tags.Name
                </td>
                <td>
                    @item.Products.Name
                </td>
                <td>
                   <a asp-action="SpecialCategoryProductsDelete" asp-route-ido="@item.TagID"  asp-route-idt="@item.ProductID">Xóa</a>
                    @*@Html.ActionLink("Delete", "SpecialCategoryProductsDelete", new { id=item.PrimaryKey })*@
                </td>
            </tr>
        }
    </tbody>
</table>

