@model figma.Models.Tags

@{
    ViewData["Title"] = "SpecialCategoryEdit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>SpecialCategoryEdit</h1>

<h4>Tags</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SpecialCategoryEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TagID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Soft" class="control-label"></label>
                <input asp-for="Soft" class="form-control" />
                <span asp-validation-for="Soft" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


