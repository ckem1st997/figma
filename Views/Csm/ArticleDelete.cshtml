        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DescriptionMeta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescriptionMeta)
        </dd>
    </dl>
    
    <form asp-action="ArticleDelete">
        <input type="hidden" asp-for="ArticleID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
    </form>
</div>
